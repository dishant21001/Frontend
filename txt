// Function to fetch and display the weather data from weatherapi.com
function fetchAndDisplayWeather() {
    const apiKey = '2c4fe195f69547fda56145444230211'; // Your API key
    const city = 'London'; // Example city, this could be dynamic
    const url = `https://api.weatherapi.com/v1/current.json?key=${apiKey}&q=${city}&aqi=no`;

    fetch(url)
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            updateCurrentWeather(data);
        })
        .catch(error => {
            console.log("Error fetching data: ", error);
            // You can update the UI here to inform the user that an error occurred.
        });
}

// Function to update the weather information in the HTML
function updateCurrentWeather(data) {
    // Update the DOM elements with the new data
    document.getElementById('weather-location').textContent = `${data.location.name}, ${data.location.region}`;
    document.getElementById('weather-temperature').textContent = data.current.temp_c;
    document.getElementById('weather-condition').textContent = data.current.condition.text;
    document.getElementById('weather-humidity').textContent = data.current.humidity;
    document.getElementById('weather-wind').textContent = data.current.wind_kph;
}

// Call the weather fetch function when the document loads
document.addEventListener('DOMContentLoaded', fetchAndDisplayWeather);




// Event listener for the search box to fetch weather when a location is entered
document.getElementById('search-box').addEventListener('change', (event) => {
    const location = event.target.value;
    fetchCurrentWeather(location);
    fetchForecast(location);
  });




